<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- Courses View -->
        <record model="ir.actions.act_window" id="course_list_action">
            <field name="name">Courses</field>
            <field name="res_model">academy.course</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create the first course
                </p>
            </field>
        </record>

        <!-- Sessions View -->
        <record model="ir.actions.act_window" id="session_list_action">
            <field name="name">Sessions</field>
            <field name="res_model">academy.session</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create the first session
                </p>
            </field>
        </record>

        <!-- Menu Navigation -->
        <menuitem name="Odoo Academy" id="menu_academy" sequence="1" /> <!-- Highest menu item -->


        <menuitem name="Odoo Academy" id="menu_academy_sub" parent = "menu_academy" sequence="2" />

        <menuitem name="Courses" id="menu_academy_course" parent="menu_academy_sub" sequence="3" action="course_list_action" /> <!-- Performs the window action -->
        <menuitem name="Sessions" id="menu_academy_sessions" parent="menu_academy_sub" sequence="4" action="session_list_action" /> -->
        <!-- <menuitem name="Create Sale Order" id="menu_academy_wizard_saleorder" parent="menu_academy_sub" sequence="7" action="session_list_action" /> -->
        

        
        
        
    </data>
</odoo>
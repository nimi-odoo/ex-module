<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- Clicking on an item from the app main page -->
        <record model="ir.ui.view" id="course_view_form">
            <field name="name">academy.course.form</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                <form string="Course Form">
                    <sheet>
                        <h1> <field name="name" /> </h1>
                        <group>
                            <group>
                                <field name="active" /> <!-- So we can tell if it's active or inactive by clicking on a record -->
                            </group>
                            <group>
                                <field name="level" />
                            </group>
                        </group>
                        <notebook> 
                            <page string="Description"> <!-- Tabs -->
                                <field name="description" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List of items on the app's main page -->
        <record model="ir.ui.view" id="course_view_list">
            <field name="name">academy.course.list</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                <tree string="Course List">
                    <field name="name" />
                    <field name="description" />
                    <field name="level" />
                </tree>
            </field>
        </record>

        <!-- Search bar -->
        <record model="ir.ui.view" id="course_view_search">
            <field name="name">academy.course.search</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                <search> <!-- Search on name and description while in list view -->
                    <field name="name" />
                    <field name="description" />
                </search>
            </field>
        </record>

    </data>
</odoo>